      var width = surface_get_width(application_surface),
      var height = surface_get_height(application_surface);
    
      // This will create a sprite from the application surface, which will be the screenshot of the game.
      pause_bg = sprite_create_from_surface(application_surface, 0, 0, width, height, false, false, 0, 0);
          

      //Deactivate all Instances:
      instance_deactivate_all(1);
      exit;
   }else /* unpause: */ {
    if(pause == true &amp;&amp; option = 0){
       //Set pause to false:
       pause = false;
     
       //Activate all Instances:
       instance_activate_all();
       
     
       //Clear Screen:
       sprite_delete(pause_bg);
       pause_bg = noone;
    }else if(pause == true &amp;&amp; option = 1){
          room_restart();
    }else if(pause == true &amp;&amp; option = 2){
          room_goto(rm_Controller_Warning);
    };
  };
};
 
